<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence   
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

  <persistence-unit name="CruisesUnit" transaction-type="JTA">
    <description>Cruises R Us Persistence</description>
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <jta-data-source>CruisesDS</jta-data-source>
    <non-jta-data-source>NoTxCruisesDS</non-jta-data-source>
    <class>com.cruises.travelagent.Address</class>
    <class>com.cruises.travelagent.Cabin</class>
    <class>com.cruises.travelagent.CreditCard</class>
    <class>com.cruises.travelagent.Cruise</class>
    <class>com.cruises.travelagent.Customer</class>
    <class>com.cruises.travelagent.Phone</class>
    <class>com.cruises.travelagent.Reservation</class>
    <class>com.cruises.travelagent.Ship</class>
  </persistence-unit>
</persistence>